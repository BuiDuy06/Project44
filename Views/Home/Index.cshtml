@{
    ViewBag.Title = "Laptop Shop";
    ViewBag.SeoDescription = "Laptop Shop";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<!-- Slider -->



<div style="display:flex">
    <div class="main_slider" style="background-image: url(/Uploads/images/sanpham/thucpham.jpg) ">
        <div class="container fill_height">
            <div class="row align-items-center fill_height">
                <div class="col">
                    <div class="main_slider_content">
                        <h2 style="color:white">Thực phẩm tươi sạch</h2>
                        <div class="red_button shop_now_button"><a href="/san-pham">Mua Ngay!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sub_slider">
        <div class="sub_slider-content" style="background-image: url(/Uploads/images/sanpham/slider2.jpg) ">
        </div>
        <div class="sub_slider-content" style="background-image: url(/Uploads/images/sanpham/slider3.jpg) ">
        </div>
    </div>

</div>
<!-- Banner -->
@Html.Action("MenuProductCategory", "Menu")

<!-- New Arrivals -->

<div class="benefit">
    <div class="container">

        <div class="section_title new_arrivals_title">

            <div class="row benefit_row">
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-cutlery" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <a href="home"><h6>Sale</h6></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-truck" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>Miễn phí vận chuyển</h6>
                            <p>Mua hàng ở bất cứ đâu!</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-check-circle" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>Hàng chính hãng</h6>
                            <p>Đảm bảo 100%</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-undo" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>Hoàn hàng trong 15 Ngày</h6>
                            <p>Hoàn hàng nhanh gọn</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Action("Partial_ProductSale", "Products")

<div class="new_arrivals">
    <div class="container">
        @Html.Action("MenuArrivals", "Menu")
    </div>
</div>

