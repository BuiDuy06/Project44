@model IEnumerable<Project_Webbanhang.Models.ShoppingCartItem>

@using Project_Webbanhang.Common


@if (Model != null && Model.Any())
{
    <h3>Giỏ hàng <span style="float:right;">@Model.Count()</span></h3>
    var i = 0;
    var tongtien = decimal.Zero;
    <div style="border:1px solid #808080">
        <table>
            @foreach (var item in Model)
            {
                tongtien += item.TotalPrice;
                <tr>
                    <td>@item.ProductName</td>
                    <td class="text-right">@Common.FormatNumber(item.Price, 0)</td>
                </tr>
            }
            <tr>
                <th>Thành tiền :</th>
                <th>@Common.FormatNumber(tongtien, 0)</th>
            </tr>
        </table>
    </div>

}
else
{
}
